{
  "name": "blinter",
  "displayName": "Blinter",
  "description": "A powerful linter for Windows Batch files with real-time feedback and quick fixes",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/tboy1337/Blinter"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "icon": "icons/blinter-logo.png",
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onDebug:blinter-debug",
    "onLanguage:bat",
    "onLanguage:cmd"
  ],
  "main": "./extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "blinter-debug",
        "label": "Blinter Debugger",
        "program": "./out/debugAdapter.js",
        "enableBreakpointsFor": {
          "languageIds": ["bat", "cmd"]
        },
        "configurationAttributes": {
          "blinter-launch": {
            "properties": {
              "type": {
                "type": "string",
                "enum": ["blinter-debug"]
              },
              "request": {
                "type": "string",
                "enum": ["launch", "attach"],
                "default": "launch"
              },
              "program": {
                "type": "string",
                "description": "Path to the batch file to lint/debug"
              },
              "args": {
                "type": "array",
                "description": "Additional arguments to pass to the batch file",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": ["type", "request", "program"]
          }
        },
        "initialConfigurations": [
          {
            "name": "Launch Batch (Blinter)",
            "type": "blinter-debug",
            "request": "launch",
            "program": "${file}"
          }
        ]
      }
    ],
    "views": {
      "debug": [
        {
          "id": "blinter.outputSummary",
          "name": "Blinter Output"
        }
      ]
    },
    "configuration": {
      "title": "Blinter",
      "properties": {
        "blinter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Blinter."
        },
        "blinter.runOn": {
          "type": "string",
          "enum": ["onSave", "onType"],
          "default": "onSave",
          "description": "Run the linter on save or as you type."
        },
        "blinter.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds for onType linting."
        },
        "blinter.rulesPath": {
          "type": ["string", "null"],
          "default": null,
          "description": "Path to a custom rules.json file."
        },
        "blinter.quickFixCodes": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["BLINTER_CASE","CMD_CASE","CASE001"],
          "description": "List of Blinter diagnostic codes for which quick fixes (command-casing) are offered."
        },
        "blinter.stupidHighlightColor": {
          "type": "string",
          "default": "#5a1124",
          "description": "Hex color to use when highlighting problematic 'stupid' lines during debugging."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "test:unit": "mocha \"test/parser.test.js\" \"test/discovery.test.js\" \"test/analysis.test.js\" \"test/debugAdapter.test.js\"",
    "test:integration": "node ./test/runTest.js",
    "prepare:icons": "node ./tools/generate-icons.js",
    "package:vsix": "npm run prepare:icons && npx vsce package --out blinter.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^10.2.0",
    "vsce": "^2.10.0"
  }
}
