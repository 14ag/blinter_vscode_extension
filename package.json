{
  "name": "blinter",
  "version": "1.26.15623",
  "publisher": "14ag",
  "icon": "icons/blinter-logo.png",
  "description": "A powerful linter for Windows Batch files with real-time feedback and quick fixes (Core v1.0.112 @ 3564f35). Only supports Windows OS.",
  "displayName": "Blinter",
  "os": [
    "win32"
  ],
  "author": {
    "name": "14ag",
    "url": "https://github.com/14ag"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/14ag/blinter_vscode_extension"
  },
  "categories": [
    "Linters",
    "Debuggers",
    "Other"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "batch",
    ".bat",
    ".cmd",
    "cmd",
    "batch file",
    "batch script",
    "batch linting",
    "batch debugging",
    "batch linter",
    "batch debugger"
  ],
  "keybindings": [
    {
      "command": "blinter.runAndDebug",
      "key": "F5",
      "enablement": "resourceLangId == 'bat'"
    }
  ],
  "activationEvents": [
    "onDebugInitialConfigurations",
    "onDebugResolve:blinter-debug",
    "onLanguage:bat",
    "onLanguage:cmd",
    "onDebug:blinter-debug"
  ],
  "main": "./extension.js",
  "files": [
    "extension.js",
    "lib/**",
    "icons/**",
    "package.json",
    "README.md",
    "LICENSE",
    "jsconfig.json",
    "vendor/**"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bat",
        "aliases": [
          "Batch",
          "batch"
        ],
        "extensions": [
          ".bat",
          ".cmd"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "bat"
      }
    ],
    "debuggers": [
      {
        "type": "blinter-debug",
        "label": "Blinter batch Debugger",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "request": {
                "type": "string",
                "enum": [
                  "launch",
                  "attach"
                ],
                "default": "launch"
              },
              "program": {
                "type": "string",
                "description": "Path to the batch file to lint/debug",
                "default": "${file}"
              },
              "args": {
                "type": "array",
                "description": "Additional arguments to pass to the batch file",
                "items": {
                  "type": "string"
                },
                "default": []
              }
            },
            "required": [
              "request",
              "program"
            ]
          }
        },
        "initialConfigurations": [
          {
            "name": "Launch Batch (Blinter)",
            "type": "blinter-debug",
            "request": "launch",
            "program": "${file}"
          }
        ]
      }
    ],
    "views": {
      "debug": [
        {
          "id": "blinter.outputSummary",
          "name": "Blinter Output",
          "icon": "icons/blinter-logo.png"
        }
      ]
    },
    "commands": [
      {
        "command": "blinter.run",
        "title": "Blinter: Run"
      },
      {
        "command": "blinter.runAndDebug",
        "title": "Blinter: Run and Debug"
      },
      {
        "command": "blinter.createConfig",
        "title": "Blinter: Create Config File"
      }
    ],
    "configuration": {
      "title": "Blinter",
      "properties": {
        "blinter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Blinter."
        },
        "blinter.runOn": {
          "type": "string",
          "enum": [
            "onSave",
            "onType"
          ],
          "default": "onSave",
          "description": "Run the linter on save or as you type."
        },
        "blinter.debounceDelay": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds for onType linting."
        },
        "blinter.quickFixCodes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "BLINTER_CASE",
            "CMD_CASE",
            "CASE001"
          ],
          "description": "Diagnostic codes that should offer command-normalized quick fixes."
        },
        "blinter.criticalHighlightColor": {
          "type": "string",
          "default": "#5a1124",
          "description": "Hex color for critical issue highlights (background color). Used during debug sessions."
        },
        "blinter.encoding": {
          "type": "string",
          "default": "utf8",
          "description": "Encoding to use when reading Blinter CLI output (e.g., utf8, utf16le)."
        },
        "blinter.followCalls": {
          "type": "boolean",
          "default": false,
          "description": "Pass --follow-calls to Blinter. Traces CALL statements into called scripts and shares variable context, eliminating false-positive undefined-variable warnings."
        },
        "blinter.minSeverity": {
          "type": "string",
          "enum": [
            "all",
            "performance",
            "style",
            "warning",
            "error"
          ],
          "default": "all",
          "description": "Minimum severity level to report. E.g. 'warning' suppresses style and performance diagnostics."
        },
        "blinter.enabledRules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Exclusive list of rule codes to enable (e.g. ['E001', 'W005']). If empty, all rules are enabled. Passed as --enabled-rules to Blinter."
        },
        "blinter.disabledRules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of rule codes to disable (e.g. ['S007', 'S011']). Passed as --disabled-rules to Blinter."
        },
        "blinter.useConfigFile": {
          "type": "boolean",
          "default": true,
          "description": "Whether Blinter should look for and use a blinter.ini in the workspace root. Set to false to pass --no-config."
        },
        "blinter.maxLineLength": {
          "type": "number",
          "default": 100,
          "description": "Maximum line length for rule S011. Passed as --max-line-length."
        },
        "blinter.noRecursive": {
          "type": "boolean",
          "default": false,
          "description": "When linting a directory, only analyze files in the top-level folder (--no-recursive)."
        },
        "blinter.suppressionCommentStyle": {
          "type": "string",
          "enum": [
            "REM",
            "::"
          ],
          "default": "REM",
          "description": "Comment style used when inserting LINT:IGNORE suppression comments."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "test:unit": "mocha \"test/parser.test.js\" \"test/blinterRunner.test.js\" \"test/analysis.test.js\" \"test/debugAdapter.test.js\"",
    "test:integration": "node ./test/runTest.js",
    "prepare:icons": "node ./tools/generate-icons.js",
    "package:vsix": "npm run prepare:icons && npx vsce package --out blinter.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@vscode/vsce": "^2.1.0",
    "@types/node": "22.x",
    "eslint": "^9.36.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^10.2.0",
    "vsce": "^2.10.0"
  }
}
